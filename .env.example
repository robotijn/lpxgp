# LPxGP Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# DATABASE (IMPORTANT: Keep test and production separate!)
# =============================================================================
# TEST database - safe to reset, truncate, delete. Used by tests.
TEST_DATABASE_URL=postgresql://user:pass@localhost:5432/lpxgp_test

# PRODUCTION database - protected from test operations. Used in production.
# DATABASE_URL=postgresql://user:pass@production-host:5432/lpxgp

# =============================================================================
# SUPABASE (Required)
# =============================================================================
# Get these from your Supabase project settings > API
SUPABASE_URL=https://your-project-id.supabase.co
SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# =============================================================================
# OPENROUTER (Required for M3+ - Pitch Generation)
# =============================================================================
# Get your API key from https://openrouter.ai/keys
OPENROUTER_API_KEY=sk-or-v1-your-key-here

# =============================================================================
# VOYAGE AI (Required for M2+ - Semantic Search)
# =============================================================================
# Get your API key from https://voyage.ai
VOYAGE_API_KEY=voy-your-key-here

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
# Environment: development | staging | production
APP_ENV=development

# Logging: DEBUG | INFO | WARNING | ERROR
LOG_LEVEL=INFO

# Server settings (for local development)
HOST=0.0.0.0
PORT=8000

# =============================================================================
# OPTIONAL - PRODUCTION ONLY
# =============================================================================
# Sentry DSN for error tracking (M5)
# SENTRY_DSN=https://your-sentry-dsn

# Rate limiting (requests per minute)
# RATE_LIMIT=60
